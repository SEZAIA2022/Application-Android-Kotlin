<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.InterventionActivity">

        <include
            android:id="@+id/custom_toolbar"
            layout="@layout/toolbar_layout"
            android:layout_width="0dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/imageIntervention"
            android:layout_width="297dp"
            android:layout_height="253dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image_intervention"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            style="@style/InfoMessageTextView"
            android:text="@string/choose_methode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIntervention"
            app:layout_constraintVertical_bias="0.255" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:text="@string/hello"
            android:textColor="@color/blue"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIntervention"
            app:layout_constraintVertical_bias="0.138"
            tools:ignore="UnknownId" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIntDirect"
            style="@style/MyCustomButtonBlue"
            android:layout_marginTop="36dp"
            android:text="@string/intervention_direct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintWidth_percent="0.66" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIntAppointment"
            style="@style/MyCustomButtonWhite"
            android:text="@string/intervention_by_appointment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnIntDirect"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent="0.66" />



</androidx.constraintlayout.widget.ConstraintLayout>