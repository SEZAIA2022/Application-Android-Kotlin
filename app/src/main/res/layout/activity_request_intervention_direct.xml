<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- Toolbar -->
<include
    android:id="@+id/custom_toolbar"
    layout="@layout/toolbar_layout"
    android:layout_width="0dp"
    android:layout_height="?attr/actionBarSize"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- QR id -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idQrLayout"
                android:layout_width="match_parent"
                style="@style/CustomTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idQr"
                    style="@style/CustomTextInputEditText"
                    android:hint="@string/qr_id"
                    android:drawableEnd="@drawable/baseline_qr_code_24"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Commentaire -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/commentLayout"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                style="@style/CustomTextInputLayout">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/comment"
                    style="@style/CustomTextInputEditText"
                    android:hint="@string/describe_exact_problem"
                    android:drawableEnd="@drawable/baseline_comment_24"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top|start"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bouton -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirmButton"
                style="@style/MyCustomButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/confirm_appointment"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
